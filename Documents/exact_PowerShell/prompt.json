{
    "$schema": "file:///C:/Users/scott/Documents/PowerShell/Modules/oh-my-posh/3.180.0/themes/schema.json",
    "final_space": true,
    "console_title": true,
    "console_title_style": "folder",
    "blocks": [
        {
            "type": "prompt",
            "alignment": "left",
            "segments": [
                {
                    "type": "os",
                    "style": "plain",
                    "foreground": "#26C6DA",
                    "properties": {
                        "prefix": ""
                    }
                },
                {
                    "type": "session",
                    "style": "plain",
                    "foreground": "#26C6DA",
                    "properties": {
                        "prefix": "",
                        "postfix": "",
                        "display_user": false
                    }
                },
                {
                    "type": "path",
                    "style": "powerline",
                    "powerline_symbol": "",
                    "foreground": "#ffffff",
                    "background": "#99295d",
                    "properties": {
                        "folder_separator_icon": "/",
                        "mixed_threshold": 10,
                        "style": "mixed"
                    }
                },
                {
                    "type": "git",
                    "style": "powerline",
                    "powerline_symbol": "",
                    "foreground": "#193549",
                    "background": "#b87b2a",
                    "properties": {
                        "display_status": true,
                        "display_stash_count": true,
                        "display_upstream_icon": true
                    }
                },
                {
                    "type": "exit",
                    "style": "plain",
                    "foreground": "white",
                    "background": "black",
                    "leading_diamond": " ",
                    "trailing_diamond": "",
                    "properties": {
                        "foreground": "#ffffff",
                        "error_color": "#ff0000",
                        "prefix": "  "
                    }
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "right",
            "segments": [
                {
                    "type": "executiontime",
                    "style": "diamond",
                    "powerline_symbol": "\uE0B0",
                    "foreground": "#ffffff",
                    "background": "#8800dd",
                    "leading_diamond": "",
                    "trailing_diamond": "",
                    "properties": {
                        "prefix": " <#fefefe>ﮫ</> ",
                        "threshold": 2000
                    }
                },
                {
                    "type": "time",
                    "style": "plain",
                    "foreground": "#007ACC"
                }
            ]
        },
        {
            "type": "prompt",
            "alignment": "left",
            "newline": true,
            "segments": [
                {
                    "type": "text",
                    "style": "plain",
                    "properties": {
                        "prefix": "",
                        "postfix": "",
                        "text": "$"
                    }
                }
            ]
        }
    ]
}