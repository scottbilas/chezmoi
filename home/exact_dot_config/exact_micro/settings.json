{
    "autoclose": false,
    "backupdir": "~/.local/share/micro/backups",
    "colorcolumn": 80,
    "colorscheme": "twilight",
    "comment": true,
    "diff": true,
    "diffgutter": true,
    "filemanager.compressparent": true,
    "filemanager.foldersfirst": true,
    "filemanager.openonstart": false,
    "filemanager.showdotfiles": true,
    "filemanager.showignored": false,
    "ftoptions": true,
    "hlsearch": true,
    "linter": true,
    "literate": true,
    "permbackup": true,
    "pluginchannels": [
        "https://raw.githubusercontent.com/micro-editor/plugin-channel/master/channel.json"
    ],
    "pluginrepos": [],
    "rmtrailingws": true,
    "savecursor": true,
    "saveundo": true,
    "scrollbar": true,
    "softwrap": false,
    "status": true,
    "statusformatl": "$(filename)$(modified) ($(line),$(col))",
    "statusformatr": "$(status.paste)| ft:$(opt:filetype) | $(opt:fileformat) | $(opt:encoding)",
    "tabstospaces": true
}
