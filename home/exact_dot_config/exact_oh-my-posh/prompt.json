{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "console_title_template": "{{if .Env.SHELL_TITLE}}{{.Env.SHELL_TITLE}} ❱ {{end}}{{.PWD}} :: {{.Shell}}",
  "blocks": [
    {
      "alignment": "left",
      "segments": [
        {
          "foreground": "#26C6DA",
          "style": "plain",
          //"template": "{{ if .WSL }}WSL at {{ end }}{{.Icon}} ",
          "template": "{{.Icon}} ",
          "type": "os"
        },
        {
          "foreground": "#26C6DA",
          "properties": {
            "display_user": false
          },
          "style": "plain",
          "template": "{{ if .SSHSession }}\ueb39 {{ end }}{{ .HostName }}",
          "type": "session"
        },
        {
          "style": "diamond",
          "leading_diamond": " ",
          "trailing_diamond": " ",
          "background": "#ff0000",
          "foreground": "white",
          "type": "root"
        },
        {
          "background": "#99295d",
          "foreground": "#ffffff",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "folder_separator_icon": "/",
            "style": "full"
          },
          "style": "powerline",
          "template": " {{ .Path }} ",
          "type": "path"
        },
        {
          "type": "unity",
          "style": "powerline",
          "powerline_symbol": "\ue0b0",
          "foreground": "#111111",
          "background": "#ffffff",
          "properties": {
            "http_timeout": 2000
          }
        },
        {
          "background": "#b87b2a",
          "foreground": "#193549",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "branch_icon": "\ue725 ", // 
            "fetch_stash_count": true,
            //"fetch_status": true,
            "fetch_upstream_icon": true,
            "fetch_worktree_count": true,
            "tag_icon": "\uf412 ",
            "git_icon": "\uf1d3", //    << default when upstream_icons does not match on url
            "upstream_icons": {
              "github.cds": "\ue721", // 
              "github.com": "\uf09b" // 
            },
            "untracked_modes": {
              "C:/UnitySrc/work/unity/":  "no",
              "C:/UnitySrc/work/unity2/": "no",
              "C:/UnitySrc/work/unity3/": "no",
              "C:/UnitySrc/work/unity4/": "no",
              "C:/UnitySrc/work/unity5/": "no",
              "D:/UnitySrc/work/unity/":  "no",
              "D:/UnitySrc/work/unity2/": "no",
              "D:/UnitySrc/work/unity3/": "no",
              "D:/UnitySrc/work/unity4/": "no",
              "D:/UnitySrc/work/unity5/": "no",
              "C:/UnitySrc/work/nu/":  "no",
              "C:/UnitySrc/work/nu2/": "no",
              "C:/UnitySrc/work/nu3/": "no",
              "C:/UnitySrc/work/nu4/": "no",
              "C:/UnitySrc/work/nu5/": "no",
              "D:/UnitySrc/work/nu/":  "no",
              "D:/UnitySrc/work/nu2/": "no",
              "D:/UnitySrc/work/nu3/": "no",
              "D:/UnitySrc/work/nu4/": "no",
              "D:/UnitySrc/work/nu5/": "no"
            }
          },
          "style": "powerline",
          "template": "{{ .UpstreamIcon }} {{ .HEAD }}{{ .BranchStatus }}{{ if .Working.Changed }} \uf044 {{ .Working.String }}{{ end }}{{ if and (.Staging.Changed) (.Working.Changed) }} |{{ end }}{{ if .Staging.Changed }} \uf046 {{ .Staging.String }}{{ end }}{{ if gt .StashCount 0}}  {{ .StashCount }}{{ end }}{{ if gt .WorktreeCount 0}} \uf1bb {{ .WorktreeCount }}{{ end }}",
          "type": "git"
        },
        {
          "type": "plastic",
          "style": "powerline",
          "powerline_symbol": "\uE0B0",
          "foreground": "#193549",
          "background": "#e65404",
          "background_templates": [
            "{{ if .MergePending }}#006060{{ end }}",
            "{{ if .Changed }}#FF9248{{ end }}",
            "{{ if and .Changed .Behind }}#ff4500{{ end }}",
            "{{ if .Behind }}#B388FF{{ end }}"
          ],
          //"template": "{{ .Selector }}{{ if .Status.Changed }} \uF044 {{ end }}{{ .Status.String }}",
          "template": "   ",
          "properties": {
            //"fetch_status": true, // crazy slow, cannot use this without caching of some kind
            "branch_max_length": 25,
            "truncate_symbol": "\u2026"
          }
        },
        {
          "type": "status",
          "background": "black",
          "foreground_templates": [
            "{{ if eq .Code 2 }}#f0ac00{{ else }}#ff0000{{ end }}"
          ],
          "leading_diamond": " \ue0b6",
          "style": "plain",
          "template": " \uf00d {{ .Code }}{{ if not (and (ge (index .Meaning 0) 48) (le (index .Meaning 0) 57)) }} ({{ .Meaning }}){{ end }}",
          "trailing_diamond": "\ue0b4"
        }
      ],
      "type": "prompt"
    },
    {
      "alignment": "right",
      "segments": [
        {
          "type": "executiontime",
          "background": "#8800dd",
          "foreground": "#ffffff",
          "leading_diamond": "\ue0b6",
          "powerline_symbol": "\ue0b0",
          "properties": {
            "threshold": 1500
          },
          "style": "diamond",
          "template": " <#fefefe>\uf4e3</> {{ .FormattedMs }} ",
          "trailing_diamond": "\ue0b4"
        },
        {
          "type": "time",
          "foreground": "#007ACC",
          "style": "plain",
          "template": " {{ .CurrentDate | date .Format }}"
        },
        {
          "type": "battery",
          "foreground_templates": [
            "{{if eq \"Charging\" .State.String}}#40c4ff{{end}}",
            "{{if and (eq \"Discharging\" .State.String) (ne 100 .Percentage)}}#ff5722{{end}}",
            "{{if eq \"Full\" .State.String}}#4caf50{{end}}",
            "#4caf50"
          ],
          "properties": {
            "charged_icon": "\ue22f ",
            "charging_icon": "\ue234 ",
            "discharging_icon": "\u21e3 "
          },
          "style": "plain",
          "template": " {{ if and (not .Error) (lt .Percentage 99) }}{{ .Icon }}{{ .Percentage }}\uf295{{ end }}"
        }
      ],
      "type": "prompt"
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "style": "plain",
          "template": "$",
          "type": "text"
        }
      ]
    }
  ],
  "final_space": true,
  "version": 2
}
